<Window x:Class="atfao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчеты о проходах" Height="450" Width="800"
        Background="#E6F5FA">
    <Grid>
        <DataGrid x:Name="DataGrid" Margin="10" AutoGenerateColumns="False" Background="White" BorderBrush="#66B3FF" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" />
                <DataGridTextColumn Header="Тип события" Binding="{Binding EventType}" Width="*" />
                <DataGridTextColumn Header="Название объекта" Binding="{Binding ObjectName}" Width="*" />
                <DataGridTextColumn Header="Дата и время события" Binding="{Binding EventDateTime}" Width="*" />
                <DataGridTextColumn Header="Код направления" Binding="{Binding DirectionCode}" Width="*" />
                <DataGridTextColumn Header="Позиция точки доступа" Binding="{Binding AccessPointPosition}" Width="*" />
                <DataGridTextColumn Header="Пропуск W26" Binding="{Binding PassW26}" Width="*" />
                <DataGridTextColumn Header="ID точки доступа" Binding="{Binding AccessPointID}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
